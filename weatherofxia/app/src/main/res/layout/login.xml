<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_text"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="FOF天气预报"
        android:gravity="center" />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/x1"
        android:layout_below="@id/tv_text"
        android:layout_marginLeft="140dp"
        android:scaleType="fitCenter"/>
    <EditText
        android:id="@+id/et_1"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="170dp"/>
    <EditText
        android:id="@+id/et_2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/et_1"
        android:layout_alignLeft="@id/et_1"/>
    <Button
        android:onClick="login"
        android:id="@+id/bt_login"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_below="@id/et_2"
        android:layout_alignLeft="@id/et_2"
        android:text="登录"/>
    <Button
        android:onClick="register"
        android:id="@+id/bt_register"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/bt_login"
        android:layout_below="@id/et_2"
        android:text="注册"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        android:layout_alignTop="@id/et_1"
        android:src="@drawable/username"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/et_2"
        android:layout_alignTop="@id/et_2"
        android:src="@drawable/password"/>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spinner_begin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="200dp"
        android:entries="@array/spingarr"
        android:background="@drawable/start"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="请选择起点:"
        android:textColor="#000000"
        android:layout_marginBottom="44dp"
        android:layout_alignBottom="@+id/spinner_begin"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/textView_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#000000"
        android:text="请选择终点:"
        android:layout_marginLeft="200dp"

        android:layout_alignBaseline="@+id/textView_begin"
        android:layout_alignBottom="@+id/textView_begin"
        android:layout_alignEnd="@+id/button_ok"
        android:layout_marginEnd="12dp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

android:background="@drawable/pictureline1"
        android:layout_above="@+id/textView_end"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textSize="20dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:onClick="onClick"
        android:background="@drawable/alarm"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp" />

    <Spinner
        android:id="@+id/spinner_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/spingarr"
        android:layout_alignLeft="@+id/textView_end"
        android:background="@drawable/end"
        android:layout_alignTop="@+id/spinner_begin" />
    


</RelativeLayout>

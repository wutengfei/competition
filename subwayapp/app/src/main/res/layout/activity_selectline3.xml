<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/back2"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择乘坐的地铁线"
        android:textSize="20dp"
        android:background="@drawable/alarm"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:textSize="15dp"
        android:onClick="onClick"
        android:text="一号线"
        android:layout_above="@+id/button_line10"
        android:layout_alignStart="@+id/button_line2"
        android:layout_marginBottom="13dp" />
    <Button
        android:id="@+id/button_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        android:layout_marginTop="90dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:textSize="15dp"
        android:onClick="onClick"
        android:text="二号线"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="37dp" />
    <Button
        android:id="@+id/button_line3"
        android:layout_width="wrap_content"
        android:layout_height  ="wrap_content"
        android:background="@drawable/btn_selector"
        android:layout_marginTop="150dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:textSize="15dp"
        android:onClick="onClick"
        android:text="大兴线"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="37dp" />
    <Button
        android:id="@+id/button_line4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        android:layout_marginTop="210dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:textSize="15dp"

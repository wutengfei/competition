        android:layout_alignBaseline="@+id/button_line3"
        android:layout_alignBottom="@+id/button_line3"
        android:layout_alignStart="@+id/button_line10" />
    <Button
        android:id="@+id/button_line12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:textSize="15dp"
        android:onClick="onClick"

        android:text="昌平线"
        android:layout_alignBaseline="@+id/button_line4"
        android:layout_alignBottom="@+id/button_line4"
        android:layout_alignStart="@+id/button_line10" />
    <Button
        android:id="@+id/button_line13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:textSize="15dp"
        android:onClick="onClick"

        android:text="十三号线"
        android:layout_alignBaseline="@+id/button_line5"
        android:layout_alignBottom="@+id/button_line5"
        android:layout_alignStart="@+id/button_line10" />
    <Button
        android:id="@+id/button_line14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:textSize="15dp"

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.movielogin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".register">
            android:label="注册"
        </activity>
        <activity android:name=".movie" />
        <activity android:name=".movie_in" />
        <activity android:name=".cinema_in" />
        <activity android:name=".user" />
        <activity android:name=".information" />
        <activity android:name=".addmovie" />
        <activity android:name=".cinema" />
        <activity android:name=".aboutus" />
        <activity android:name=".contect" />
        <activity android:name=".chat"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".tradeinfomation" />
        <activity android:name=".TradingInformation" />
        <activity android:name=".Null"
            android:windowSoftInputMode="adjustPan"
            ></activity>
    </application>

</manifest>
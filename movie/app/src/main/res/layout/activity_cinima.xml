<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.movielogin.cinema"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#dfdddd"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:id="@+id/infortitlename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="影院信息"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/cinima_background"
            android:layout_weight="0.00" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/searchcinema"
                android:layout_width="301dp"
                android:layout_height="64dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.74"
                android:hint="请输入你要搜索的影院"
                android:inputType="text"
                android:singleLine="true" />

           <Button
               android:id="@+id/cinemasearch"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="搜索"
               android:textSize="20dp"
               android:background="@drawable/table_shape"/>
        </LinearLayout>

        <ListView
            android:id="@+id/cinemainfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>


    </LinearLayout>


</RelativeLayout>

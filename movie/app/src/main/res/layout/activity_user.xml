<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.administrator.movielogin.user"
    android:orientation="vertical"
    android:weightSum="1">
    <!-- <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="30dp"
         android:layout_margin="5dp"
         android:background="@drawable/relativlayout_drawable">

     </RelativeLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#dfdddd"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:id="@+id/infortitlename"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="我的"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text="用户名："
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineartrading"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/list_selector"
            android:baselineAligned="false"
            android:clickable="true"
            android:duplicateParentState="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/texttrading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.22"
                android:text="待交易"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/tradingnext"
                android:layout_width="32dp"
                android:layout_height="21dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/next"
            />

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightgray" />

        <LinearLayout
            android:id="@+id/lineartraded"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/list_selector"
            android:baselineAligned="false"
            android:clickable="true"
            android:duplicateParentState="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/texttraded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.22"
                android:text="已交易"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/tradednext"
                android:layout_width="32dp"
                android:layout_height="21dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/next"
                />

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightgray" />

        <LinearLayout
            android:id="@+id/linearbuy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/list_selector"
            android:baselineAligned="false"
            android:clickable="true"
            android:duplicateParentState="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textaddmovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.22"
                android:text="添加影票"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/buynext"
                android:layout_width="32dp"
                android:layout_height="21dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/next"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearmessage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/list_selector"
            android:baselineAligned="false"
            android:clickable="true"
            android:duplicateParentState="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.22"
                android:text="我的消息"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/messagenext"
                android:layout_width="32dp"
                android:layout_height="21dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/next"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearchangepassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/list_selector"
            android:baselineAligned="false"
            android:clickable="true"
            android:duplicateParentState="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/changepassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.22"
                android:text="修改密码"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/changepasswordnext"
                android:layout_width="32dp"
                android:layout_height="21dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/next" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearaboutus"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/list_selector"
            android:baselineAligned="false"
            android:clickable="true"
            android:duplicateParentState="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textaboutus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.22"
                android:text="关于我们"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/aboutusnext"
                android:layout_width="32dp"
                android:layout_height="21dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/next" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearexit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="35dp"
            android:background="#da3030">

            <TextView
                android:id="@+id/exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="退出"
                android:textColor="#ffffff"
                android:textSize="30dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

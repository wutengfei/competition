<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#efefef">

    <Button
        android:id="@+id/chat"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/btn"
        android:text="进行聊天"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <Button
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/btn"
        android:layout_marginTop="5dp"
        android:text="电话联系"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_below="@+id/chat"
        android:layout_alignStart="@+id/chat" />
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/showid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="订单编号:1" />

        <TextView
            android:id="@+id/showmoviename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="英伦对决"
            android:textColor="@color/black"
            android:textColorLink="@android:color/background_dark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/showcinema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:text="橙天嘉禾电影院"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/showdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="2017.9.30 20：00"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/showuser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="25dp"
            android:text="出票人：yjm"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/showseat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="25dp"
            android:text="座位号：5排1号"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/shownumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="25dp"
            android:text="数量：1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/showprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:text="价格：25元"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>
